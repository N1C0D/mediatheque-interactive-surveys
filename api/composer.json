{
    "name": "mediatheque-interactive-surveys/api",
    "description": "Mediatheque Interactive Surveys Application",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/doctrine-orm": "^4.2",
        "api-platform/symfony": "^4.2",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5.7",
        "nelmio/cors-bundle": "^2.6",
        "phpdocumentor/reflection-docblock": "^5.6.4",
        "phpstan/phpdoc-parser": "^2.3",
        "symfony/asset": "7.3.*",
        "symfony/asset-mapper": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/doctrine-messenger": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/expression-language": "7.3.*",
        "symfony/flex": "^2.10",
        "symfony/form": "7.3.*",
        "symfony/framework-bundle": "7.3.*",
        "symfony/http-client": "7.3.*",
        "symfony/intl": "7.3.*",
        "symfony/mailer": "7.3.*",
        "symfony/mime": "7.3.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/notifier": "7.3.*",
        "symfony/process": "7.3.*",
        "symfony/property-access": "7.3.*",
        "symfony/property-info": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/security-bundle": "7.3.*",
        "symfony/serializer": "7.3.*",
        "symfony/stimulus-bundle": "^2.31",
        "symfony/string": "7.3.*",
        "symfony/translation": "7.3.*",
        "symfony/twig-bundle": "7.3.*",
        "symfony/ux-turbo": "^2.31",
        "symfony/validator": "7.3.*",
        "symfony/web-link": "7.3.*",
        "symfony/yaml": "7.3.*",
        "twig/extra-bundle": "^2.12|^3.22.1",
        "twig/twig": "^2.12|^3.22"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "symfony serve"
        ],
        "test:csfixer": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "fix:csfixer": "vendor/bin/php-cs-fixer fix",
        "test:phpstan": "vendor/bin/phpstan analyse",
        "test:twig": "vendor/bin/twig-cs-fixer lint",
        "fix:twig": "vendor/bin/twig-cs-fixer fix",
        "test:yaml": "php bin/console lint:yaml config",
        "test": [
            "@test:csfixer",
            "@test:phpstan",
            "@test:twig",
            "@test:yaml"
        ],
        "fix": [
            "@fix:csfixer",
            "@fix:twig"
        ],
        "db": [
            "php bin/console doctrine:database:drop --force",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:migrations:migrate --no-interaction",
            "php bin/console doctrine:fixtures:load --no-interaction"
        ]
    },
    "scripts-descriptions": {
        "start": "Lance le serveur web interne Symfony via la CLI.",
        "test:csfixer": "Vérifie le style du code PHP sans le modifier (dry-run).",
        "fix:csfixer": "Corrige automatiquement le style du code PHP.",
        "test:phpstan": "Lance l'analyse statique du code PHP avec PHPStan.",
        "test:twig": "Vérifie le style des templates Twig.",
        "fix:twig": "Corrige automatiquement le style des templates Twig.",
        "test:yaml": "Vérifie la syntaxe des fichiers de configuration YAML.",
        "test": "Lance l'ensemble des tests de qualité de code (PHP, Twig, YAML).",
        "fix": "Lance l'ensemble des corrections automatiques de style.",
        "db": "Réinitialise la base de données et charge les fixtures."
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.3.*"
        }
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^4.3",
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpro/grumphp-shim": "^2.17",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.32",
        "phpstan/phpstan-beberlei-assert": "^2.0.2",
        "phpunit/phpunit": "^12.4.4",
        "symfony/browser-kit": "7.3.*",
        "symfony/css-selector": "7.3.*",
        "symfony/debug-bundle": "7.3.*",
        "symfony/maker-bundle": "^1.65",
        "symfony/stopwatch": "7.3.*",
        "symfony/web-profiler-bundle": "7.3.*",
        "vincentlanglet/twig-cs-fixer": "^3.11",
        "zenstruck/foundry": "^2.8"
    }
}
