# ===========================================
# Application Environment
# ===========================================
APP_ENV=dev

# ===========================================
# Ports (change if default ports are in use)
# ===========================================
HTTP_PORT=8080
HTTPS_PORT=8443

# ===========================================
# Security
# ===========================================
# Generate a secure secret: openssl rand -hex 32
APP_SECRET=change_me_in_production

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_VERSION=16
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=!ChangeMe!

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=https://api.localhost:8443
NEXT_PUBLIC_MEDIA_URL=https://api.localhost:8443

# ===========================================
# CORS Configuration
# ===========================================
# Regex pattern for allowed origins
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1|app\.localhost)(:[0-9]+)?$

# ===========================================
# Messenger Configuration
# ===========================================
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
