# ===========================================
# Application Environment
# ===========================================
APP_ENV=dev

# ===========================================
# Security
# ===========================================
# Generate a secure secret: openssl rand -hex 32
APP_SECRET=change_me_in_production

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_VERSION=16
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=!ChangeMe!

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=https://api.localhost

# ===========================================
# CORS Configuration
# ===========================================
# Regex pattern for allowed origins
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1|app\.localhost)(:[0-9]+)?$

# ===========================================
# Mailer Configuration
# ===========================================
# Development: smtp://mailer:1025
# Production: smtp://user:pass@smtp.example.com:587
MAILER_DSN=smtp://mailer:1025

# ===========================================
# Messenger Configuration
# ===========================================
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
